{
  "name": "dexie-addon-suite-monorepo",
  "version": "0.0.0",
  "description": "Collection of dexie addons",
  "private": true,
  "author": "PVermeer",
  "license": "MIT",
  "scripts": {
    "lerna": "lerna",
    "bootstrap": "lerna bootstrap || npx lerna bootstrap",
    "bootstrap:ci": "lerna bootstrap --ci || npx lerna bootstrap --ci",
    "init": "semantic-release-cli setup",
    "lint": "lerna run lint",
    "build": "git fetch origin master && lerna run build --include-dependencies --since",
    "build:beta": "git fetch origin beta && lerna run build --include-dependencies --since beta",
    "build:master": "git fetch origin master && lerna run build --include-dependencies --since master",
    "test": "npm run build && lerna run test --stream --since",
    "test:beta": "npm run build:beta && lerna run test --stream --since beta",
    "test:master": "npm run build:master && lerna run test --stream --since master",
    "version": "bash ./scripts/version.sh",
    "release": "bash ./scripts/release.sh",
    "prepare": "husky install && patch-package"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@pvermeer/dexie-addon-suite": "file:packages/dexie-addon-suite",
    "@pvermeer/dexie-class-addon": "file:packages/dexie-class-addon",
    "@pvermeer/dexie-encrypted-addon": "file:packages/dexie-encrypted-addon",
    "@pvermeer/dexie-immutable-addon": "file:packages/dexie-immutable-addon",
    "@pvermeer/dexie-populate-addon": "file:packages/dexie-populate-addon",
    "@pvermeer/dexie-rxjs-addon": "file:packages/dexie-rxjs-addon"
  },
  "devDependencies": {
    "@commitlint/cli": "^14.1.0",
    "@commitlint/config-conventional": "^14.1.0",
    "@commitlint/config-lerna-scopes": "^15.0.0",
    "@types/faker": "^5.5.9",
    "@types/is-ci": "^3.0.0",
    "@types/jasmine": "^3.10.2",
    "@types/karma": "^6.3.1",
    "@types/lodash.clonedeep": "^4.5.6",
    "@types/lodash.flatten": "^4.4.6",
    "@types/lodash.isequal": "^4.5.5",
    "@types/lodash.uniqby": "^4.7.6",
    "@types/lodash.uniqwith": "^4.5.7",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "dts-bundle-generator": "^5.9.0",
    "esbuild": "^0.13.15",
    "eslint": "^8.2.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-ban": "^1.6.0",
    "eslint-plugin-import": "^2.25.3",
    "faker": "^5.5.3",
    "fork-ts-checker-webpack-plugin": "^6.4.0",
    "husky": "^7.0.4",
    "is-wsl": "^2.2.0",
    "jasmine": "^3.10.0",
    "jasmine-console-reporter": "^3.1.0",
    "jasmine-core": "^3.10.1",
    "karma": "~6.3.8",
    "karma-chrome-launcher": "^3.1.0",
    "karma-firefox-launcher": "^2.1.2",
    "karma-jasmine": "^4.0.1",
    "karma-jasmine-html-reporter": "^1.7.0",
    "karma-mocha-reporter": "^2.2.5",
    "karma-webpack": "^5.0.0",
    "lerna": "^4.0.0",
    "license-webpack-plugin": "^4.0.0",
    "nodemon": "^2.0.15",
    "patch-package": "^6.4.7",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.11.0",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "typescript": "^4.5.5",
    "webpack": "^5.64.0",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "^4.9.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/PVermeer/dexie-addon-suite-monorepo.git"
  },
  "bugs": {
    "url": "https://github.com/PVermeer/dexie-addon-suite-monorepo/issues"
  },
  "homepage": "https://github.com/PVermeer/dexie-addon-suite-monorepo#readme"
}

{
  "version": "independent",
  "npmClient": "npm",
  "useWorkspaces": true,
  "packages": ["packages/*"],
  "ignoreChanges": [
    "**/*.spec.ts",
    "**/CHANGELOG.md",
    ".github/**/*",
    ".husky/**/*",
    ".vscode/**/*",
    ".devcontainer/**/*"
  ],
  "command": {
    "version": {
      "allowBranch": ["master", "beta", "next"],
      "conventionalCommits": true,
      "message": "chore: new releases [skip ci]"
    }
  }
}
